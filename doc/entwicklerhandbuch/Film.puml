  enum BuchArt {
    KINDLE
    DRUCKAUSGABE
  }

  enum Verlag {
    FOO_VERLAG
    BAR_VERLAG
  }

  interface BuchData <<entity>> {
    + _id?: string
    + __v?: number
    + createdAt?: number
    + updatedAt?: number
    + titel: string
    + rating?: number
    + art?: BuchArt
    + verlag: Verlag
    + preis: number
    + rabatt?: number
    + lieferbar?: boolean
    + datum?: Date
    + isbn: string
    + homepage?: string
    + schlagwoerter?: Array<string>
    + autoren: any
  }
}

