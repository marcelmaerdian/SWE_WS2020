  hide model circle
}

package buch.entity {
  class "validateBuch()" as validateBuch
  hide validateBuch circle

  class BuchModel
  hide BuchModel circle

  BuchModel ..> Schema
  BuchModel ..> model
  BuchModel ..> validateBuch

